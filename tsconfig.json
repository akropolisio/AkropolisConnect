{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2017"],
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": 
    {
      "shared": ["./src/shared"],
      "modules": ["./src/modules"]
    },
    "rootDirs": [
      "./src",
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}
